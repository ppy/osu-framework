{
    "version": "0.1.0",
    "taskSelector": "/t:",
    "tasks": [
        {
            "taskName": "build",
            "isShellCommand": true,
            "showOutput": "silent",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/property:DebugType=portable"
            ],
            "problemMatcher": "$msCompile",
            "isBuildCommand": true
        },
        {
            "taskName": "rebuild",
            "isShellCommand": true,
            "showOutput": "silent",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/property:DebugType=portable",
                "/target:Clean,Build"
            ],
            "problemMatcher": "$msCompile",
            "isBuildCommand": true
        }
    ]
}
