    "version": "2.0.0",
    "tasks": [{
            "label": "Build (Tests, Debug)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "-p:GenerateFullPaths=true",
                "-m",
                "-verbosity:m",
                "FlappyDon.Game.Tests"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build (Tests, Release)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "-p:Configuration=Release",
                "-p:GenerateFullPaths=true",
                "-m",
                "-verbosity:m",
                "FlappyDon.Game.Tests"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
