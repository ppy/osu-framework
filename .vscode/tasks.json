{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Debug)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "--no-restore",
                "/p:GenerateFullPaths=true",
                "/m",
                "/verbosity:m",
                "osu.Framework.Tests"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build (Release)",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "--no-restore",
                "/p:Configuration=Release",
                "/p:GenerateFullPaths=true",
                "/m",
                "/verbosity:m",
                "osu.Framework.Tests"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Restore",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "restore",
                "osu-framework.sln"
            ],
            "problemMatcher": []
        }
    ]
}